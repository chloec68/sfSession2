

{% extends 'base.html.twig' %} 

{% block title %}Training sessions{% endblock %}

{% block nav %}
      <div class="nav_container">
                    <div class="nav-left">
                    <p id="welcome">{{ training.name }}/Available sessions</p>
                    {# <p> {{totalSessions}} Sessions </p> #}
                    </div>
                    <div class="nav_middle">
                        {# <p id="editProfile"><a href="">Edit Profile <i class="fa-solid fa-pen"></i></a></p> #}
                    </div>
                    <div class="nav-right">
                        <p><a href=" {{ path('app_home') }} ">Home <i class="fa-solid fa-circle-arrow-right"></i></a></p>
                    </div>
                </div>
{% endblock nav %}

{% block body %}
<div class="sessions_wrapper">
<table id="sessions_table">
    <thead>
        <tr>
            <th>Sessions</th>
            <th>starting date</th>
            <th>ending date</th>
            <th>total places</th>
            <th>available</th>
            <th>program details</th>
        </tr>
    </thead>

    <tbody>
 {% for session in training.sessions %}
        <tr>
            <td>{{session.name }}</td>
            <td>{{session.startingDate | date("d-m-Y")}}</td>
            <td>{{session.endingDate | date("d-m-Y")}}</td>
            <td>{{session.nbPlaces}}</td>
            <td>{{session.nbPlacesLeft}}</td>
            <td><a href="{{ path('detail_program', {'id':session.id}) }}"><img id="search" src="icones/chercher.png" alt="Link to program details"></a></td>
        </tr>
 {% endfor %}
    </tbody>
 </table>
     <a href="{{ path('new_session',{'id':training.id}) }}"><i class="fa-solid fa-circle-plus"></i></a>
</div>
{% endblock %}