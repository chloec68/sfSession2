{% extends 'base.html.twig' %}

{% block body %}
<p><a href=" {{ path('app_course') }} " class="link_previousPage"><i class="fa-solid fa-circle-arrow-left"></i> all courses</a></p>
<h1>New course</h1>
<div class="form_container">
    {{ form_start(form) }}

    <div class="row">
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'custom-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.category, {'attr': {'class': 'custom-input'}}) }}
        </div>
    </div>

    <div class="row">
        {{ form_widget(form.submit) }}
</div>

    {{ form_end(form) }}
</div>

{% endblock body %}