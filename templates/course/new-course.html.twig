{% extends 'base.html.twig' %}

{% block nav %}
      <div class="nav_container">
                    <div class="nav-left">
                        <p>New course</p>
                    </div>
                    <div class="nav-right">
                        <p><a href=" {{ path('app_course') }} ">all courses <i class="fa-solid fa-circle-arrow-right"></i></a></p>
                        <p><a href=" {{ path('app_home') }} ">home <i class="fa-solid fa-circle-arrow-right"></i></a></p>
                    </div>
                </div>
{% endblock nav %}

{% block body %}

<div class="form_container">
    {{ form_start(form) }}

    <div class="row">
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'custom-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.category, {'attr': {'class': 'custom-input'}}) }}
        </div>
    </div>

    <div class="row">
        {{ form_widget(form.submit) }}
</div>

    {{ form_end(form) }}
</div>

{% endblock body %}