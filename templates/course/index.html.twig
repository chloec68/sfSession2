{% extends 'base.html.twig' %}

{% block title %}All Courses{% endblock %}

{% block body %}
<h1>all courses</h1>

<div class="sessions_wrapper">
<a class="add_button" href=" {{ path('add-course') }}">ADD A COURSE</a>
    <table id="sessions_table">
        <thead>
            <th>name</th>
            <th>category</th>
            <th>delete</th>
        </thead>
        {% for course in courses %}
            <tbody>
                <tr>
                    <td>{{course.name}}</td>
                    <td>{{course.category.name}}</td>
                    <td><a href=" {{ path('delete_course', {'id':course.id}) }}">delete</a></td>
                </tr>
            </tbody>
        {% endfor %}
    </table>

</div>
{% endblock %}


