{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block nav %}
      <div class="nav_container">
                    <div class="nav-left">
                    <p id="welcome">all categories</p>
                    {# <p> {{totalCategories}} Categories </p> #}
                    </div>
                    <div class="nav_middle">
                    </div>
                    <div class="nav-right">
                        <p><a href=" {{ path('app_home') }}">home <i class="fa-solid fa-circle-arrow-right"></i> </a></p>
                    </div>
                </div>
{% endblock nav %}

{% block body %}
<div class="categories_wrapper">
    <a class="category_button_round" href="{{ path('add_category') }}">ADD A CATEGORY</a>
    <table id="categories_table">
        <thead>
            <th>name</th>
            <th>bin</th>

        </thead>
    {% for category in categories %}
            <tbody>
                <tr>
                    <td>{{category.name}}</td>
                    <td><a href=" {{ path('delete_category',{'id':category.id}) }} "><i class="fa-solid fa-trash"></i></a></td>

                </tr>
            </tbody>
    {% endfor %}
    </table> 
</div>

{% endblock %}
