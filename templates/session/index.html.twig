{% extends 'base.html.twig' %}

{% block title %}All Sessions{% endblock %}

{% block nav %}
      <div class="nav_container">
                    <div class="nav-left">
                    <p id="welcome">all sessions</p>
                    <p> {{totalSessions}} Sessions </p>
                    </div>
                    <div class="nav_middle">
                        {# <p id="editProfile"><a href="">Edit Profile <i class="fa-solid fa-pen"></i></a></p> #}
                    </div>
                    <div class="nav-right">
                        <p><a href=" {{ path('app_home') }}">home <i class="fa-solid fa-circle-arrow-right"></i> </a></p>
                    </div>
                </div>
{% endblock nav %}

{% block body %}
<div class="sessions_wrapper">
    <table id="sessions_table">
        <thead>
            <th>name</th>
            <th>starting date</th>
            <th>ending date</th>
            <th>details</th>
        </thead>
        <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{session.name}}</td>
                    <td>{{session.startingDate | date("d-m-Y")}}</td>
                    <td>{{session.endingDate | date("d-m-Y")}}</td>
                    <td><a href="{{ path('detail_session',{'id':session.id}) }}"><i class="fa-solid fa-circle-arrow-right"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}








